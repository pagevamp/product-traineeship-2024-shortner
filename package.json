		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.7",
		"express-rate-limit": "^7.5.0",
		"nest-winston": "^1.9.7",
		"nodemailer": "^6.9.16",
		"pg": "^8.13.1",
		"rate-limit-redis": "^4.2.0",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"winston": "^3.17.0",
		"zod": "^3.24.1"
